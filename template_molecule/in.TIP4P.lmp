log             log.cif.txt append
units           real
atom_style      full
boundary        p p p

pair_style      hybrid/overlay lj/cut/coul/long 12.500 lj/cut 12.500
bond_style      harmonic
angle_style     hybrid fourier cosine/periodic
dihedral_style  harmonic
improper_style  fourier

dielectric      1.0
pair_modify     tail yes mix arithmetic
special_bonds   lj/coul 0.0 0.0 1.0
box tilt        large
read_data       data.cif.txt

#### Atom Groupings ####
group           TIP4P_Water type    6:8
group           fram     id   1:1536
#### END Atom Groupings ####

molecule        TIP4P_Water TIP4P_Water.molecule
variable        dt         equal 1.00
variable        tdamp      equal 100*${dt}
fix             1 TIP4P_Water rigid/small molecule langevin 298.00 298.00 ${tdamp} 888175 mol TIP4P_Water
fix             2 fram langevin 298.00 298.00 ${tdamp} 1171056
fix             3 fram nve
fix             4 all momentum 1 linear 1 1 1 angular
region          cell     block    0 EDGE 0 EDGE 0 EDGE units lattice
fix             5 TIP4P_Water deposit 5 0 20000 101066 region cell near 2.00 mol TIP4P_Water rigid 1
thermo          100
run             200000
unfix           1
unfix           2
unfix           3
unfix           5
fix             6 TIP4P_Water rigid/nvt/small molecule temp 298.00 298.00 ${tdamp} mol TIP4P_Water
fix             7 fram nvt temp 298.00 298.00 ${tdamp}
thermo          1
run             200000
unfix           6
unfix           7
